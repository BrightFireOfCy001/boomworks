<?xml version="1.0" encoding="utf-8"?>
<rules>
  <rule>
    <index>1</index>
    <type>c</type>
    <desc>C/C++/JAVA source style</desc>
      <extension>
        <name>.cpp</name>
        <desc>c plus plus source file.</desc>
      </extension>
      <extension>
        <name>.java</name>
        <desc>JAVA source file.</desc>
      </extension>
  </rule>
  <rule>
    <index>2</index>
    <type>basic</type>
    <desc>Basic source style</desc>
      <extension>
        <name>.vb</name>
        <desc>VB source file.</desc>
      </extension>
      <extension>
        <name>.vbs</name>
        <desc>VBScript source file.</desc>
      </extension>
  </rule>
    <rule>
    <index>3</index>
    <type>txt</type>
    <desc>Text file style</desc>
      <extension>
        <name>.txt</name>
        <desc>Plain text file.</desc>
      </extension>
      <extension>
        <name>.rc</name>
        <desc>RC file.</desc>
      </extension>
  </rule>
</rules>
